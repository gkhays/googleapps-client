<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

        <title>Google Directory client web application)</title>

        <!-- Bootstrap -->
        <link href="//netdna.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body>

        <div class="container">
            <div class="row">
                <div class="col-lg-offset-2 col-lg-8">
                    <header class="page-header">
                        <h1>Open Tasks</h1>
                    </header>
                    {{#taskListModels}}
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">{{title}}</h3>
                            </div>
                            {{#tasks}}
                                <div class="panel-body">
                                    {{title}}
                                </div>
                            {{/tasks}}
                            {{^tasks}}
                                <div class="panel-body alert alert-warning">
                                    No open tasks were found. Define some tasks.
                                </div>
                            {{/tasks}}
                        </div>
                    {{/taskListModels}}
                    {{^taskListModels}}
                        <div class="panel-heading alert alert-warning">
                            No task list were found. Create some list.
                        </div>
                    {{/taskListModels}}
                </div>
            </div>
        </div>

        <script src="lib/bootstrap.js"></script>
    </body>
</html>